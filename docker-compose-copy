services:
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: root_password
      MYSQL_DATABASE: petsbook_db
      MYSQL_USER: petsbook_user
      MYSQL_PASSWORD: petsbook_password
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./database/migrations:/docker-entrypoint-initdb.d
    networks:
      - app-network

  php:
    build:
      context: ./docker/php
      dockerfile: Dockerfile
    volumes:
      - ./:/var/www/html
    environment:
      - DB_HOST=mysql
      - DB_NAME=petsbook_db
      - DB_USER=petsbook_user
      - DB_PASSWORD=petsbook_password
    depends_on:
      - mysql
    networks:
      - app-network

  nginx:
    image: nginx:alpine
    ports:
      - "8080:80"
    volumes:
      - ./:/var/www/html
      - ./docker/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./logs:/var/www/html/logs
    depends_on:
      - php
    networks:
      - app-network

volumes:
  mysql_data:

networks:
  app-network:
    driver: bridge